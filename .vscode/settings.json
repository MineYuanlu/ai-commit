{
    "files.autoSave": "onWindowChange",
    "editor.formatOnSave": true,
    "[python]": {
        "editor.defaultFormatter": "ms-python.autopep8"
    },
    "python.formatting.provider": "none",
    "autopep8.args": [
        "--max-line-length",
        "120",
        "--experimental",
        "--aggressive",
        "--exclude",
        "utils/issue_api/define/**"
    ]
}